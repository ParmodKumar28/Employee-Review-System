<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Review System</title>

    <!-- Fontawesome Icons -->
    <script
      src="https://kit.fontawesome.com/a6cc128b0d.js"
      crossorigin="anonymous"
    ></script>
    <!-- Fontawesome Icons Ends Here -->

    <!-- Bootstrap Link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Link Ends Here -->

    <!-- Css Link -->
    <link rel="stylesheet" href="/css/style.css" />
    <!-- Css Link Ends Here -->
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <% if (typeof employee !== 'undefined' && employee !== null) { %> <%
        if(employee.role == 'Employee') { %>
        <a class="navbar-brand" href="/api/employee/">Employee Review System</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- Display for employees -->
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <a class="nav-link" href="/api/employee/">Submit Feedback</a>
              </li>
            <li class="nav-item">
              <a class="nav-link" href="/api/employee/">Reviews</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <%= employee.name %>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/api/employee/logout"
                    >Logout</a
                  >
                </li>
              </ul>
            </li>
            <!-- ... (Other employee-related links) ... -->
          </ul>
          <% } else if(employee.role == 'Admin'){ %>
            <a class="navbar-brand" href="/api/admin/">Employee Review System</a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- Display for admins -->
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="#">Assign Task</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Reviews</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <%= employee.name %>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/api/employee/logout"
                    >Logout</a
                  >
                </li>
              </ul>
            </li>
            <!-- ... (Other admin-related links) ... -->
          </ul>
          <% } %> <% } else { %>
            <a class="navbar-brand fw-medium" href="/api/employee/register">Employee Review System</a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- Display for non-logged-in users -->
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active text-primary fw-medium" aria-current="page" href="/api/employee/register"
                >Sign In</a
              >
            </li>
            <!-- ... (Other links for non-logged-in users) ... -->
          </ul>
          <% } %>

          <!-- Search form -->
          <form class="d-flex" role="search">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button class="btn btn-outline-success" type="submit">
              Search
            </button>
          </form>
        </div>
      </div>
    </nav>
    <!-- Navbar Ends Here -->
    <!-- Placeholder For Body To Render Files Here -->
    <%-body%>
    <!-- Placeholder Ends -->
    <!-- Bootstrap Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <!-- Bootstrap Script Ends Here -->
  </body>
</html>
